@model Final.Models.Cinema

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cinema-detail-header">
    <h2>@Model.Name</h2>
    <p>@Model.Address</p>
</div>

<!-- Tabs -->
<ul class="nav nav-tabs" id="cinemaTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" data-toggle="tab" href="#dangChieu" role="tab">
            Phim đang chiếu
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" data-toggle="tab" href="#sapChieu" role="tab">
            Phim sắp chiếu
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" data-toggle="tab" href="#bangVe" role="tab">
            Bảng vé
        </a>
    </li>
</ul>

<!-- Tab content -->
<div class="tab-content">
    <div class="tab-pane fade show active" id="dangChieu" role="tabpanel">
        @Html.Action("NowShowing", "Place", new { cinemaID = Model.CinemaID })
    </div>
    <div class="tab-pane fade" id="sapChieu" role="tabpanel">
        @Html.Action("ComingSoon", "Place")
    </div>
    <div class="tab-pane fade" id="bangVe" role="tabpanel">
        @Html.Action("TicketPrice", "Place", new { cinemaID = Model.CinemaID })
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#cinemaTabs a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
        });
    </script>
}